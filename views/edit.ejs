<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body style="background-color: aquamarine;">
  <h1 style=" margin: 15px 600px; text-align:center;">Edit Product</h1>
  <form action="/edit/<%= product._id %>" method="post">
    <label for="name" style="margin: 10px 600px;">Name:</label>
    <input type="text" id="name" name="name" value="<%= product.name %> " style="margin: 10px 600px;" required>
    <label for="description" style="margin: 10px 600px;">Description:</label>
    <input type="text" id="description" name="description" value="<%= product.description %>" style="margin: 10px 600px;" required>
    <label for="price" style="margin: 10px 600px;">Price:</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" step="0.01" style="margin: 10px 600px;" required>
    <button type="submit" style="margin: 10px 600px; width:100px">Save Changes</button>
  </form>
</body>
</html>
